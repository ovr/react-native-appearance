{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "example/**/*.ts",
    "example/**/*.tsx"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["dom", "es2015", "es2016", "esnext"],
    "jsx": "react-native",
    "declaration": true,
    "outDir": "dist/"
  },
  "exclude": ["node_modules"]
}
